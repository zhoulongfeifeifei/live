.page_box{
    width: 100%;
}
live-pusher{
    width: 100%;
    height: 100%;
    position: fixed;
    z-index: 0;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
}
.button{
    width: 100%;
    position: fixed;
    z-index: 1;
    left: 0;
    right: 0;
    bottom: 0;
    padding: 10rpx;
    text-align: center;
}
.button .but{
    width: 40%;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    font-size: 24rpx;
    color: #ffffff;
    display: inline-block;
    vertical-align: top;
    border-radius: 40rpx;
    background-color: #d84d3a;
    margin: 0 22rpx;
}

     
